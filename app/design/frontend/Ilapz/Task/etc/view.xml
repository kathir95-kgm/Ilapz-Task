<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <vars module="Magento_Catalog">

    
     <var name="gallery">
     <var name="allowfullscreen">true</var>
         <var name="navdir">vertical</var>
         <var name="navarrows">true</var>
          <var name="arrows">false</var>
    </var>
    <var name="magnifier">
     <var name="allowfullscreen">true</var>
        <var name="fullscreenzoom">50</var>  <!-- Zoom for fullscreen (integer)-->
        <var name="top"></var> <!-- Top position of magnifier -->
        <var name="left"></var> <!-- Left position of magnifier -->
        <var name="width">500</var> <!-- Width of magnifier block -->
        <var name="height">500</var> <!-- Height of magnifier block -->
        <var name="eventType">hover</var> <!-- Action that atcivates zoom (hover/click) -->
        <var name="enabled">false</var> <!-- Turn on/off magnifier (true/false) -->
</var>
    
    </vars>
    <media>
        <images module="Magento_Catalog">
            <image id="product_page_image_large" type="small_image"/>
            <image id="product_page_image_medium" type="small_image">
                <width>700</width>
                <height>460</height>
            </image>

            <image id="product_page_main_image" type="small_image">
                <width>460</width>
                <height>460</height>
            </image>

            <image id="product_page_main_image_default" type="small_image">
                <width>460</width>
                <height>460</height>
            </image>
        </images>
    </media>
</view>
